#include<iostream>
using namespace std;
int main() {
    setlocale(0, "");
    int number;
    while (true) {
        cout << "[+]Введите число  от 1 до 15";
        cin >> number;

        if (number < 0 && number >15) {
            cout << "[!]Ошибка" << endl;
        }
        if (number == 0) {
            cout << "Выход" << endl;
            break;
        }
        cout << "[+] Цикл \"WHILE\"" << endl;
        int i = 1;
        while (i <= number) {
            cout << "[+] Цикл отработал.Круг:" << i << "." << endl;
            i++;
        }
        cout << endl;
    }
    return 0;


}
